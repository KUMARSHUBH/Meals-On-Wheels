<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="128dp"
    android:layout_height="128dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/category_big_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/category_big_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="North Indian"
        app:layout_constraintBottom_toBottomOf="@+id/category_big_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="@+id/category_big_image"
        app:layout_constraintTop_toTopOf="@+id/category_big_image"
        app:layout_constraintVertical_bias="0.84000003"
        android:textColor="@android:color/white"
        android:maxLines="2"
        android:textSize="18sp"
        android:textStyle="bold"
        />


</androidx.constraintlayout.widget.ConstraintLayout>